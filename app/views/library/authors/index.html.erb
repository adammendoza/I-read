<div class='container'>
  <div class='row'>
<h1 class='mb-5 mx-auto'>Authors</h1>
  
   
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Country</th>
      <th scope="col">Lived</th>
      <th scope="col">Books</th>
      <th scope="col"></th>

    </tr>
  </thead>
  <tbody>
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.country %></td>
      <td><%= author.born %> - <%= author.died %></td>
      <td><%= author.books %></td>
      <td><%= link_to "Edit", edit_library_author_path(author)%></td>

    </tr>
  <% end %>  
  </tbody>
</table>
</div>
</div>

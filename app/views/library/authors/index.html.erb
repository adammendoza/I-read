<div class='container'>
  <div class='row'>
   
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Country</th>
      <th scope="col">Lived</th>
      <th scope="col">Books</th>
    </tr>
  </thead>
  <tbody>
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.country %></td>
      <td><%= author.born %>-<%= author.died %></td>
      <td><%= author.books %></td>
    </tr>
  <% end %>  
  </tbody>
</table>
</div>
</div>
